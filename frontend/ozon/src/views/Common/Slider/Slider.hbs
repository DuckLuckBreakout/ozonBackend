<div class="{{sliderStyles.block}}" id="slider">
    <div class="{{sliderStyles.buttonWrapper}}">
        <button class="{{buttonStyles.slider}} {{decorators.noVisibility}}" id="slider-left">
            <img src="{{buttonSvg.src}}" class="{{decorators.mirrorY}}">
        </button>
    </div>
    <div class="{{sliderStyles.contentWrapper}}">
        <div class="{{sliderStyles.content}}">
            {{#each items}}
                {{{this}}}
            {{/each}}
        </div>
    </div>
    <div class="{{sliderStyles.buttonWrapper}}">
        <button class="{{buttonStyles.slider}} {{decorators.noVisibility}}" id="slider-right">
            <img src="{{buttonSvg.src}}">
        </button>
    </div>
</div>
